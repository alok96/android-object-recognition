<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/feedback_input_text" />
            <gradient android:angle="-90" android:startColor="@color/symbol_text_color_selected" android:endColor="@color/symbol_text_color_selected"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/symbol_text_color_selected"/>
            <solid android:color="@color/symbol_text_color_selected"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/symbol_text_color_selected" />
            <gradient android:angle="-90" android:startColor="@color/symbol_text_color_selected" android:endColor="@color/symbol_text_color_selected" />
        </shape>
    </item>
</selector>